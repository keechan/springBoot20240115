<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.rubypaper.project.board.BoardDao">
 
  <select id="getBoardList" parameterType="com.rubypaper.project.board.BoardVO"
                    resultType="com.rubypaper.project.board.BoardVO" >
    select *  from  board  order  by  seq  desc
  </select> 
 
 <insert id="insert" parameterType="com.rubypaper.project.board.BoardVO" >

  insert  into board (seq, title,writer, content, regdate )
  values (idx.nextval,#{title},#{writer},#{content}, sysdate)
 
 </insert> 
 
  <select id="getBoard" parameterType="com.rubypaper.project.board.BoardVO"
                    resultType="com.rubypaper.project.board.BoardVO" >
    select *  from  board  where seq=#{seq}
  </select> 
  
   <update id="update" parameterType="com.rubypaper.project.board.BoardVO" >
	  update board set title=#{title},writer=#{writer}, content=#{content}
	  where seq=#{seq}
   </update> 
 
 
 </mapper>