package com.rubypaper.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;

import com.rubypaper.project.board.BoardServiceImpl;

@Controller
public class BoardController {
	//interface 대신 필히 class를  Type으로 지정해야 함
	@Autowired
	BoardServiceImpl service;
	
	BoardController() {
		System.out.println("===>BoardController ");
	}

	@GetMapping("BoardForm.do")
	String BoardForm() {
		service.insert(null);
		return "/board/BoardForm";
	}
	
	@GetMapping("getBoardForm.do")
	String BoardFormOK(Model model) {
		service.getBoardList(null);
		return "redirect:getBoardList.do";
	}

	@GetMapping("getBoardList.do")
	String getBoardList(Model model) {
		System.out.println(" =====>getBoardList : ");

		model.addAttribute("li", service.getBoardList(null));		
		return "/board/getBoardList";
	}
}